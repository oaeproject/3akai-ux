<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <!--
    Bootstrap JAX-RS with this class (must extend JAX-RS Application).  The
    Application class is the standard implementation-agnostic way to start up a
    JAX-RS app.
  -->
  <context-param>
    <param-name>javax.ws.rs.core.Application</param-name>
    <param-value>org.sakaiproject.webappsample.SampleJaxRsApplication</param-value>
  </context-param>
  <listener>
    <listener-class>org.sakaiproject.kernel.webapp.JaxRsApplicationListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>org.sakaiproject.webappsample.HelloWorldServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
</web-app>